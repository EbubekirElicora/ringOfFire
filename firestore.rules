rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Jeder darf lesen (öffentlich lesbar)
    match /{document=**} {
      allow read: if true;

      // Nur authentifizierte User dürfen schreiben (create, update, delete)
      allow write: if request.auth != null;
    }
  }
}
